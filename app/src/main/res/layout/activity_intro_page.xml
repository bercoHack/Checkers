<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/picture2"
    tools:context=".IntroPage">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome To Damka"
        android:textColor="#000"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:id="@+id/text1"
        android:layout_centerHorizontal="true"
        android:textSize="30dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="      submit with 2 players and play!\n     or watch previous game records!"
        android:layout_below="@+id/text1"
        android:textColor="#000"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/text2"
        android:textSize="20dp"/>


    <Button
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:text="1 vs. 1 game"
        android:background="#0000"
        android:layout_below="@id/text2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textSize="20dp"
        android:id="@+id/button1"/>
    <Button
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:text="past games"
        android:background="#0000"
        android:layout_below="@id/button1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        android:id="@+id/button2"/>

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@+id/button2"
        android:id="@+id/board"
        android:layout_centerHorizontal="true"
        android:src="@drawable/damka_board"
        android:layout_marginTop="100dp"
        />

</RelativeLayout>